@model ActivitySystem.Models.tblActivities
@*<script src="~/js/Validation.js"></script>*@
@*<link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.js"></script>*@
<link href="~/lib/summernote-0.8.18-dist/summernote-lite.css" rel="stylesheet" />
<script src="~/lib/summernote-0.8.18-dist/summernote-lite.js"></script>
<div class="card">
    <div class="card-header">
        <h3>Add Activity</h3>
    </div>
    <script>
                @{
                if (@ViewData["Successful"] != null)
                {
                    <Text>
                    var result = '@Html.Raw(ViewData["Successful"])';
                    Swal.fire(result,'','success')
                        .then(
                            function () {
                                window.location.href = '@Url.Action("ViewActivities", "Admin")';
                            }
                        );
                    </Text>
                    }
                    @*else if(@ViewBag.error == 1 )
                    {
                    <Text>
                    Swal.fire("Register start date can't be higher the register end date", '', 'error');
                    </Text>
                    }*@
            }
    </script>
    <div class="card-body">

        <form asp-action="AddActivity" id="form" name="form1">
            <div class="row">
                <div class="col-md-4">
                    <label class="col-form-label">Activity Name</label>
                    <input type="text" asp-for="ActivityName" class="form-control">
                </div>
                <div class="col-md-4">
                    <label class="col-form-label">Supervisor Name</label>
                    <select class="form-control custom-select" asp-items="ViewBag.UserId" asp-for="SupervisorId"></select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label class="col-form-label">Semester Name</label>
                    <select class="form-control custom-select" asp-items="ViewBag.SemesterId" asp-for="SemesterId"></select>
                </div>

                <div class="col-md-4">
                    <label class="col-form-label">Maximum Number of Students</label>
                    <input type="number" asp-for="MaxStudents" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label class="col-form-label"> Start Date of the Activity</label>
                    <input type="date" asp-for="StartDate" class="form-control" value="StartDate" />
                </div>

                <div class="col-md-4">
                    <label class="col-form-label">End Date of the Activity</label>
                    <input type="date" asp-for="EndDate" class="form-control" value="EndDate" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label class="col-form-label"> Start Date of Registeration to the Activity</label>
                    <input type="date" asp-for="RegisterStartDate" class="form-control" value="RegisterStartDate" />
                    @if (ViewBag.error == 1)
                    {
                        <div class="row"><p style="color:red">Register start date can't be higher the register end date </p></div>}
                </div>

                <div class="col-md-4">
                    <label class="col-form-label">End Date of Registeration to the Activity</label>
                    <input type="date" asp-for="RegisterEndDate" class="form-control" value="RegisterEndDate" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label class="control-label">Description</label>
                        @*<textarea type="text" class="form-control" placeholder="" asp-for="LetterContent"></textarea>*@
                        <textarea id="summernote" placeholder="Describe the activity..." asp-for="Content"></textarea>
                        @*<div id="summernote"></div>*@
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-12 " style="text-align: left;">
                    <button type="submit" class="btn btn-dark btn-search" onclick=" return Valdation()"> Add </button>
                </div>
            </div>

        </form>
</div>
</div>


<script type="text/javascript">
    $('#summernote').summernote({
        fontSizes: ['8', '9', '10', '11', '12', '14', '16', '18', '20', '22', '24'],
        toolbar: [
            // [groupName, [list of button]]
            ['style', ['bold', 'italic', 'underline', 'clear']],
            ['font', ['strikethrough', 'superscript', 'subscript']],
            ['fontsize', ['fontsize']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['height', ['height']]
        ]
    });
</script>