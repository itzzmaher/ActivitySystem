
@model ActivitySystem.Models.tblUsers


<script src="~/js/Validation.js"></script>
<div class="card">
    <div class="card-header">
        <h3>Activate User</h3>
    </div>
    <div class="card-body">
        <script>
                @{
                if (@ViewData["Successful"] != null)
                {
                    <Text>
                    var result = '@Html.Raw(ViewData["Successful"])';
                    Swal.fire(result,'','success')
                        .then(
                            function () {
                                window.location.href = '@Url.Action("Index","Admin")';
                            }
                        );
                    </Text>
                }
                else if (@ViewData["Falied"] != null && ViewData["NoRedirect"] == null)
                {
                    <Text>
                    var result = '@Html.Raw(ViewData["Falied"])';
                    Swal.fire(result, '', 'error')
                        .then(
                            function () {
                                window.location.href = '@Url.Action("Index", "Account")';
                            }
                        );
                    </Text>
                    }
                    else if(@ViewData["Falied"] != null && ViewData["NoRedirect"] != null)
                    {
                    <Text>
                    var result = '@Html.Raw(ViewData["Falied"])';
                    Swal.fire(result, '', 'error');
                    </Text>
                    }
            }
        </script>
        <form asp-action="AdminActivate" id="form">
            <div class="row">
                <div class="col-md-6">
                    <label class="col-form-label">
                        Full Name
                    </label>
                    <input type="text" asp-for="Name" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label class="col-form-label">KFU Email</label>
                    <input type="text" readonly asp-for="KfuEmail" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label class="col-form-label">CollegeName</label>
                    <input type="text" readonly asp-for="College.CollegeName" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label class="col-form-label">Password</label>
                    <input type="password" asp-for="Password" class="form-control">
                    <input hidden type="text" asp-for="GuId" readonly class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label class="col-form-label">Confirm Password</label>
                    <input type="password" name="ConfirmedPassword" class="form-control">
                    @if (ViewBag.Error == 1)
                    {
                        <div class="row"><p style="color:red"> New Password and old password don't match </p></div>}
                </div>
            </div>
                <br />
                <div class="row">
                    <div class="col-md-12 " style="text-align: left;">
                        <button type="submit" class="btn btn-dark btn-search" onclick="return Valdation()"> Activate </button>
                    </div>
                </div>
        </form>
    </div>
</div>

