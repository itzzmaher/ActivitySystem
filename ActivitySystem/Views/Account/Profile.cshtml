@model ActivitySystem.Models.tblUsers
<div class="card">
    <div class="card-header">
        <h3>User Profile</h3>
    </div>
    <script>
                @{
                if (@ViewData["Successful"] != null)
                {
                    <Text>
                    var result = '@Html.Raw(ViewData["Successful"])';
                    Swal.fire(result,'','success')
                        .then(
                            function () {
                                window.location.href = '@Url.Action("Index", "Activity")';
                            }
                        );
                    </Text>
                    }
                    else if(@ViewData["Falied"] != null )
                    {
                    <Text>
                    var result = '@Html.Raw(ViewData["Falied"])';
                    Swal.fire(result, '', 'error');
                    </Text>
                    }


}
    </script>

    <div class="card-body">

        <form id="form">
            <div class="row">
                <div class="col-md-6">
                    <label class="col-form-label">Full Name</label>

                    <input readonly type="text" asp-for="Name" class="form-control">
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label class="col-form-label">E-Mail</label>
                    <input readonly type="text" asp-for="KfuEmail" class="form-control">
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label class="col-form-label">College</label>
                    <input readonly type="text" asp-for="College.CollegeName" class="form-control">
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label class="col-form-label">Role</label>
                    <input readonly type="text" asp-for="Role.RoleName" class="form-control">
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-2">
                    <a asp-action="ChangeName" asp-controller="Account" class="btn btn-dark btn-sm">Change Your Name</a>
                </div>
                <div class="col-lg-2">
                    <a asp-action="ChangeUserPassword" asp-controller="Account" class="btn btn-dark btn-sm">Change Password </a>
                </div>
            </div>

        </form>
    </div>
</div>
