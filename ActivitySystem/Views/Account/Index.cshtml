<link href="~/css/MyStyles.css" rel="stylesheet" />

<section class="section about-section gray-bg">
    <div class="card-body">
        <div class="row ">
            <div class="col-lg-6">
                <div class="about-text go-to">

                    <h3 class="theme-color lead">@Model.Name</h3>

                    <div class="row about-list">
                        <div class="col-md-6">
                            <div class="media">
                                <label>College</label>
                                <p>@Model.College.CollegeName</p>
                            </div>
                            <div class="media">
                                <label>Role</label>
                                <p>@Model.Role.RoleName</p>
                            </div>

                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label>E-mail</label>
                                <p>@Model.KfuEmail</p>
                            </div>
                            <div class="media">
                                <label>Status</label>
                                @if (Model.IsActive)
                                {<p>Active</p>}
                                else
                                {<p>Not Active</p>}
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
<div class="card-body">
<div class="row">
