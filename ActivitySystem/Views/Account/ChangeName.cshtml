@model ActivitySystem.Models.tblUsers

<div class="card">
    <div class="card-header">
        <h3>User Profile</h3>
    </div>
    <script>
                @{
                if (@ViewData["Success"] != null)
                {
                    <Text>
                    var result = '@Html.Raw(ViewData["Success"])';
                    Swal.fire(result,'','success')
                        .then(
                            function () {
                                window.location.href = '@Url.Action("Profile", "Account")';
                            }
                        );
                    </Text>
                    }
                    else if(@ViewData["Falied"] != null )
                    {
                    <Text>
                    var result = '@Html.Raw(ViewData["Falied"])';
                    Swal.fire(result, '', 'error');
                    </Text>
                    }


}
    </script>
    <div class="card-body">
        <form asp-action="ChangeName">
            <div class="row">
                <div class="col-md-6">
                    <label class="col-form-label">Full Name</label>
                    <input type="text" asp-for="Name" class="form-control">
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2">
                    <button type="submit" class="btn btn-dark btn-search">Change Your Name</button>
                </div>
            </div>
        </form>
    </div>
</div>
